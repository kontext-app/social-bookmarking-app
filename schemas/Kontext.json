{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Kontext",
  "properties": {
    "referencedDoc": {
      "type": "string",
      "pattern": "^ceramic://.+(\\?version=.+)?",
      "maxLength": 1024
    },
    "comment": {
      "type": "string",
      "title": "comment",
      "maxLength": 1024
    },
    "bestRating": {
      "type": "integer",
      "title": "bestRating"
    },
    "worstRating": {
      "type": "integer",
      "title": "worstRating"
    }
  }
}
